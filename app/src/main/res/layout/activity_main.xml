<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="np.com.nirab.templerunmapper.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/osmmap"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="16dp">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="#CC000000"
        android:textColor="#FFFFFF"
        android:drawableRight="@android:drawable/ic_menu_mylocation"
        android:text="Record"
        android:onClick="recordDetails"/>

     <Button
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:textSize="24sp"
         android:padding="16dp"
         android:layout_margin="16dp"
         android:background="#CC000000"
         android:textColor="#FFFFFF"
         android:drawableRight="@android:drawable/ic_menu_info_details"
         android:text="View"
         android:onClick="viewCollected"/>

    </LinearLayout>
</RelativeLayout>
